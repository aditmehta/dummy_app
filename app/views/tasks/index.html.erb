<a href="#" class="btn btn-primary pull-right" id="task-form-trigger">Add a Task</a>
<h1>Tasks</h1>

<section id="task-form" class="well hidden">
  <a href="#" id="task-form-closer">&times;</a>
  <%= render partial: 'tasks/form', locals: {task: @new_task} %>
</section>
<div id="tasks-container" class="row">
  <section id="tasks" class="list-group col-sm-4">
    <%= render @tasks %>
  </section>
  <section id="task-desc" class="col-sm-8">
    
  </section>
</div>