<div id="task-<%= task.id %>" class="list-group-item task ui-state-default">
  <span class="glyphicon glyphicon-th pull-left drag-handle"></span>
  <%= link_to (content_tag(:span, '', class: "glyphicon glyphicon-trash")), task_path(task), method: :delete, class: "pull-right delete", remote: true %>
  <h4 class="list-group-item-heading"><%= task.title %></h4>
  <p class="list-group-item-text">
    <%= task.description %>
  </p>
  <%= link_to "Show details", task_path(task), remote: true %>
</div>